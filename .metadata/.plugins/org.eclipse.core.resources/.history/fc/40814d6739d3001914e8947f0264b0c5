
import java.util.*;

public class Helper {
	
	public static boolean isValidSquare(String input) {
		if (input.length() < 2 || input.length() > 2) {
			return false;
		} else if (!isValidChar(input.charAt(0)) || !isValidNr(input.substring(1))) {
			return false;
		}

		return true;
	}

	public static boolean isSquareFree(HashMap<String, Square> playfield, String coordinate) {
		return playfield.get(coordinate).getShip() == null;
	}
}
