
public class Square {

	private Ship ship;
	private boolean isShot;

	public Square(Ship ship) {
		ship = new Ship(ship.getType(), ship.getLength());
		isShot = false;
	}
	
	public boolean isShot() {
		return isShot;
	}
	
	public void setShip(Ship ship) {
		this.ship = ship;
	}
	
	public Ship getShip() {
		return ship;
	}
}
